@{
    ViewData["Title"] = "Home Page";
}

<h2>Comments</h2>
  <div class="container">
    <form>
      <div class="form-group">
        <textarea class="form-control status-box" rows="3" placeholder="Enter your comment here..."></textarea>
      </div>
    </form>
    <div class="button-group pull-right">
      <p class="counter">250</p>
      <a href="#" class="btn btn-primary">Post</a>
    </div>
    <ul class="posts">
        @foreach(var comment in ViewBag.Comments)
        {
            if(comment.CommentID==comment.ParentID)
            {
                <li class="comment-li">@comment.CommentText</li>
            }
            else
            {
                <li class="reply-li">@comment.CommentText</li>
            }
        }
    </ul>
  </div>